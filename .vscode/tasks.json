{
    "tasks": [
        {
            "type": "shell",
            "label": "Build XenonCode",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                
                "-O3", "-static", // Release
                // "-g", // Debug
                // "-O0", // Fast compile
                
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/build/xenoncode"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Confirm Unit Tests Results",
            "command": "/usr/bin/diff",
            "args": [
                "${workspaceFolder}/test/unit_test_results",
                "${workspaceFolder}/test/storage/results"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}
