{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build XenonCode",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                
                "-O3", "-static", // Release
                // "-g", // Debug
                
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/build/xenoncode"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
